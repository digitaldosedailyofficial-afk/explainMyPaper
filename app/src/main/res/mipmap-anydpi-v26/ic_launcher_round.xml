<?xml version="1.0" encoding="utf-8"?>
<adaptive-icon xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the background layer, often a solid color or simple pattern -->
    <background android:drawable="@android:color/white" />

    <!-- This is the foreground layer, your actual app logo/icon -->
    <!-- Changed from @drawable/ic_launcher_foreground to @mipmap/ic_launcher_foreground -->
    <foreground android:drawable="@mipmap/ic_launcher_foreground" />

    <!-- Optional: For Android 13+ and themed icons, you can also add a monochrome layer -->
    <!-- <monochrome android:drawable="@drawable/ic_launcher_monochrome" /> -->
</adaptive-icon>